<openerp>
	<data>
	
	<!-- Purchase Order Customized -->
	
	<record id="view_purchase_form1"  model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                        <field name="product_tunch"/>
                    </xpath>
                </data> 
            </field>
    </record> 
    
    
    <record id="view_res_sale_form"  model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='partner_id']" position="after">
                        <field name="purchase_order"/>
                        <field name="amt_total"/>
                        <field name="qty_related"/>
                    </xpath>
                </data> 
            </field>
        </record> 
        
    
    <record id="view_res_sale_line_form1" model="ir.ui.view">
    	<field name="name">sale.order.line.form.inherit</field>
    	<field name="model">sale.order</field>
    	<field name="type">form</field>
    	<field name="priority" eval="8"/>
    	<field name="inherit_id" ref="sale.view_order_form"/>
    	<field name="arch" type="xml">
    		<data>
    			<xpath expr="//field[@name='product_uom_qty']" position="after">
    				<field name="product_tunch"/>
    				<field name="labor_charge"/>
    			</xpath>
    			<xpath expr="//tree/field[@name='product_uom_qty']" position="after">
    				<field name="product_tunch"/>
    				<field name="labor_charge"/>
    			</xpath>
    		</data>	
    	</field>	   

    </record>
    
    
    <record id="view_res_account_form1" model="ir.ui.view">
    	<field name="name">account.invoice.form.inherit</field>
    	<field name="model">account.invoice</field>
    	<field name="type">form</field>
    	<field name="priority" eval="8"></field>
    	<field name="inherit_id" ref="account.invoice_form"/>
    	<field name="arch" type="xml">
    		<data>
    			<xpath expr="//field[@name='partner_id']" position="after">
    				<field name="purchase_order"/>
    				<field name="amt_total"/>
    				<field name="qty_related"/>
    			</xpath>
			<xpath expr="//field[@name='invoice_line']/tree/field[@name='price_unit']" position="before">
    				<field name="tunch"/>
    				<field name="labor"/>
    			</xpath>
        	</data>
        </field>	
    </record>
    
        
    </data>
</openerp>
	
